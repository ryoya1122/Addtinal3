

<div class="container">
    <div class="row">
<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= @user.errors.count %>errors prohibited this book from being saved:</h2>
    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
        <div class="col-xs-3">
<%= form_for(@user) do |f| %>
    <h2>User info</h2>
    <Label>Name</Label>
        <%= f.text_field :name, autofocus: true, class:"form-control", id:"inputEmail", placeholder:"名前"%>
    <label>Image</label>
    <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
    <label>Introduction</label>
        <%= f.text_area :introduction, autofocus: true, class:"form-control", id:"inputEmail", placeholder:""%>
        <label>zip code</label>
        <%= f.text_field :postcode, class:"form-control postal-code" %>
        <label>prefecture</label>
        <%= f.collection_select :prefecture_code, JpPrefecture::Prefecture.all, :name, :name, include_blank: true %><br>
        <label>city</label>
        <%= f.text_field :address_city, class:"form-control p-locality" %>
        <label>street</label>
        <%= f.text_field :address_street, class:"form-control p-street-address" %>
        <label>builbding name</label>
        <%= f.text_field :address_building, class:"form-control p-extended-address" %>
    <%= f.submit "Update User", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
<% end %>
</div>
</div>
</div>
